# i3blocks config file 

command=~/.local/bin/i3blocks/$BLOCK_NAME
#separator=false
separator_block_width=5
markup=pango

[namaz]
command=~/.local/bin/namaz.sh
interval=60

[weather]
command=~/.local/bin/openweathermap-fullfeatured.sh
interval=600

[light]
signal=11
command=~/.local/bin/i3blocks/light.sh
interval=once

[volume]
signal=12
command=~/.local/bin/i3blocks/volume
interval=once

[key]
signal=10
command=~/.local/bin/i3blocks/key.sh
label=<span color="#ffb52a"> </span>
interval=once

[mem]
command=~/.local/bin/i3blocks/mem.sh
label=<span color="#ffb52a"> </span>
interval=3

