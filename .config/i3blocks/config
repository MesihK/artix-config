[temp]
command=~/.local/bin/i3blocks/temp.sh
interval=5

[disk]
command=~/.local/bin/i3blocks/disk.sh
interval=60

[bat]
command=~/.local/bin/i3blocks/bat.sh
interval=5

[eth]
label=<span color="#ffb52a"></span>
command=~/.local/bin/i3blocks/eth.sh
interval=30

[wifi]
label=<span color="#ffb52a"></span>
